@{
    ViewData["Title"] = "Bienvenidos!";
}

<div class="card" style="width: 300px;">
    <div class="card-header" style="color:coral">
        Bienvenido/a
    </div>
    <img class="card-img-top" src="./images/logo.jpg" height="100" width="300" style="padding-left:100px; padding-right:100px" alt="Card image cap">
    <div class="card-body">
        <form method="post">
            <div class="form-group mb-2">
                <label>Correo electrónico</label>
                <input type="email" name="email" class="form-control" placeholder="Ingrese su email" />
            </div>
            <div class="form-group mb-2">
                <label>Contraseña</label>
                <input type="password" name="password" class="form-control" placeholder="Ingrese su contraseña" />
            </div>
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>
        <div class="alert-danger">
            @TempData["Message"]
        </div>
        <div>
          <p><a asp-area="" asp-controller="Users" asp-action="Create">Crear usuario</a></p>
        </div>
    </div>
</div>